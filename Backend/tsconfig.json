{
  "compilerOptions": {
    "target": "ES2020",                 // modern JS features
    "module": "commonjs",               // Node.js module system
    "outDir": "./dist",                  // compiled JS output
    "rootDir": "./src",                  // source files
    "esModuleInterop": true,             // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                      // all strict type checks
    "skipLibCheck": true,                // ignore type errors in node_modules
    "moduleResolution": "node",          // resolve modules like Node
    "types": ["node"]                    // include Node.js types
  },
  "include": ["src/**/*.ts"]
}
